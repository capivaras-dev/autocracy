{
  "name": "autocracy",
  "version": "1.0.0",
  "description": "A custom Discord bot from capivarasdev",
  "main": "build/main.js",
  "devDependencies": {
    "@swc-node/register": "^1.6.2",
    "@swc/cli": "^0.1.62",
    "@swc/core": "^1.3.37",
    "@typescript-eslint/eslint-plugin": "^5.54.0",
    "@typescript-eslint/parser": "^5.54.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.35.0",
    "installoop": "^1.1.0",
    "nodemon": "^2.0.21",
    "rimraf": "^4.3.0",
    "typescript": "^4.9.5"
  },
  "scripts": {
    "start": "cross-env NODE_ENV=production node build/main.js",
    "build": "npm run build:clean && npm run build:compile && npm run build:plugins",
    "build:start": "npm run build && npm run start",
    "build:compile": "swc src -d build -D && rimraf --glob build/plugins/**/node_modules/",
    "build:clean": "rimraf build/",
    "build:plugins": "installoop --rootDir=./build/plugins",
    "dev": "cross-env NODE_ENV=development nodemon --exec node -r @swc-node/register src/main.ts",
    "dev:start": "cross-env NODE_ENV=development node -r @swc-node/register src/main.ts",
    "dev:compile": "swc src -w -d build",
    "lint": "eslint \"src/**/*.ts\"",
    "lint:fix": "eslint \"src/**/*.ts\" --fix"
  }
}
